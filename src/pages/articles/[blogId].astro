---
import Layout from "../../layouts/Layout.astro";
import BackButton from "../../components/shared/BackButton.astro";
import { getBlogs, getBlogDetail } from "../../library/microcms";
import { marked } from "marked";
// code blockのhighlight
import hljs from 'highlight.js';
import 'highlight.js/styles/github-dark.css'

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id
    }
  }));
}

// 記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);

// microCMSから返されたプレーンテキストをmarkdownにparse
const html = marked.parse(blog.content, { gfm: true })

// syntax highlightの設定
const renderer = new marked.Renderer();
renderer.codespan = (code) => {
  return `<code class="inline-code" style="background-color: #e2e2e2; padding: 2px">${code}</code>`;
};
renderer.code = (code, _) => {
  return '<pre' + '><code class="hljs">' + hljs.highlightAuto(code).value + '</code></pre>';
};
marked.setOptions({
  renderer: renderer
});
---

<Layout title="My first blog with Astro">
  <BackButton href="/" />
  <main>
    <h1 class="title">{blog.title}</h1>
    <p class="publishedAt">公開日時 : {blog.publishedAt}</p>
    <div class="post" set:html={html}></div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    width: 80%;
  }
</style>
